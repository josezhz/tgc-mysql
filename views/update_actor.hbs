{{#extends 'base'}}
{{#block 'content'}}
<h1>Create New Actor</h1>
<form method="POST">
    <div>
        <label>First Name:</label>
        <input type="text" name="first_name" value={{this.actor.first_name}}>
    </div>
    <div>
        <label>Last Name:</label>
        <input type="text" name="last_name" value={{this.actor.last_name}}>
    </div>
    <button type="submit">Submit</button>
</form>
{{/block}}
{{/extends}}