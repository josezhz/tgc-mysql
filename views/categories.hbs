{{#extends 'base'}}

{{#block 'content'}}
<h1>Add Categories:</h1>
<form method="POST">
    <div class="input-group">
        <input type="text" name="name" class="form-control">
        <button type="submit" class="btn btn-success">Add</button>
    </div>
</form>
<hr>
<h1>Categories:</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Category ID</th>
            <th scope="col">Category Name</th>
            <th scope="col">Last Update</th>
            <th scope="col">Edit</th>
        </tr>
    </thead>
    <tbody>
        {{#each categories }}
        <tr>
            <td>{{this.category_id}}</td>
            <td>{{this.name}}</td>
            <td><code>{{this.last_update}}</code></td>
            <td>
                <a href="categories/update/{{this.category_id}}" class="btn btn-primary btn-sm">Update</a>
                <a href="#" class="delete-btn btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}